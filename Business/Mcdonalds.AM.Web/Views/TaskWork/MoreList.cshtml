@{
    Layout = null;
}
<div class="panel panel-black">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">
            [[[查询]]] <i class="fa fa-search"></i>
        </span>
    </div>
    <div class="panel-body form-horizontal" role="form">
        <div class="form-group mg_t_10">
            <label class="control-label col-xs-2">[[[标题]]]</label>
            <div class="col-xs-2">
                <input type="text" class="form-control" ng-model="title">
            </div>
            <label class="control-label col-xs-2">[[[项目类型]]]</label>
            <div class="col-xs-2">
                <select chosen="{disable_search:true}" class="form-control" ng-model="sourceCode" ng-options="sc for sc in sourceCodes">
                    <option value="">--[[[请选择]]]--</option>
                </select>
            </div>
        </div>
        <div class="form-group mg_t_10">
            <label class="control-label col-xs-2">[[[餐厅编号]]]</label>
            <div class="col-xs-2">
                <input type="text" class="form-control" ng-model="searchCondition.StoreCode">
            </div>
            <label class="control-label col-xs-2">[[[餐厅名称]]]</label>
            <div class="col-xs-2">
                <input type="text" class="form-control" ng-model="searchCondition.StoreName">
            </div>
            <div class="col-xs-2">
                <button type="button" class="btn btn-sm btn-warning" ng-click="search()">[[[查询]]]</button>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-black">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">
            <i class="fa fa-list"></i>{{name}}(<span>{{totalItems}}</span>)
        </span>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-list" ng-show="status==0">
                <thead>
                    <tr>
                        @*<th width="10%">编号</th>*@
                        <th width="10%">[[[餐厅编号]]]</th>
                        <th width="30%">[[[标题]]]</th>
                        <th width="10%">[[[来源]]]</th>
                        <th width="10%">[[[模块]]]</th>
                        <th width="15%">[[[处理人]]]</th>
                        <th width="15%">[[[创建日期]]]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="task in list">
                        @*<td>{{task.Num}}</td>*@
                        <td>{{task.StoreCode}}</td>
                        <td><a href="{{task.Url}}">{{task.Title}} {{task.OperateMsg}}</a></td>
                        <td>{{task.SourceNameENUS}}</td>
                        <td>{{task.TypeNameENUS}}</td>
                        <td>{{task.ReceiverNameENUS}}</td>
                        <td>{{task.CreateTime | date:"yyyy-MM-dd HH:mm:ss"}}</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-list" ng-show="status==2">
                <tr>
                    @*<th width="10%">编号</th>*@
                    <th width="10%">[[[餐厅编号]]]</th>
                    <th width="30%">[[[标题]]]</th>
                    <th width="10%">[[[来源]]]</th>
                    <th width="10%">[[[模块]]]</th>
                    <th width="15%">[[[任务接受时间]]]</th>
                    <th width="15%">[[[任务完成时间]]]</th>

                </tr>
                <tr ng-repeat="task in list">
                    @*<td>{{task.Num}}</td>*@
                    <td>{{task.StoreCode}}</td>
                    <td><a href="{{task.Url}}">{{task.Title}} {{task.OperateMsg}}</a></td>
                    <td>{{task.SourceNameENUS}}</td>
                    <td>{{task.TypeNameENUS}}</td>
                    <td>{{task.CreateTime | date:"yyyy-MM-dd HH:mm:ss"}}</td>
                    <td>{{task.FinishTime | date:"yyyy-MM-dd HH:mm:ss"}}</td>
                </tr>
                <tr ng-show="list.length==0">
                    <td colspan="7">[[[当前没有数据]]]</td>
                </tr>
            </table>
        </div>
        <div class="table-paginate">
            <span>当前第{{pageIndex}}页/共{{numPages}}页 共{{totalItems}}条记录</span>
            <pagination total-items="totalItems" boundary-links="true" max-size="5" items-per-page="pageSize" ng-model="pageIndex" class="pagination-sm" previous-text="[[[上一页]]]" next-text="[[[下一页]]]" first-text="[[[首页]]]" last-text="[[[末页]]]" num-pages="numPages"></pagination>
        </div>
    </div>
</div>


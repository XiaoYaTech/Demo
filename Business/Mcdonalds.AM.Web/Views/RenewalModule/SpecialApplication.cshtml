
@{
    Layout = null;
}
<div class="panel panel-black mg_t_10">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">
            [[[Special Application]]]
        </span>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-1">
                <label><input type="radio" ng-value="true" ng-model="entity.IsUrgency" ng-disabled="!editable" />&nbsp;&nbsp;&nbsp;[[[是]]]</label>
            </div>
            <div class="col-xs-1">
                <label><input type="radio" ng-value="false" ng-model="entity.IsUrgency" ng-disabled="!editable" />&nbsp;&nbsp;&nbsp;[[[否]]]</label>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <textarea class="form-control" rows="3" ng-model="entity.UrgencyReason" ng-disabled="!entity.IsUrgency" ng-show="editable"></textarea>
                <pre ng-show="!editable">{{entity.UrgencyReason}}</pre>
            </div>
        </div>
    </div>
</div>

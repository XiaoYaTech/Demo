@{
    Layout = null;
}
<form class="form-horizontal" name="frmApprovalDialog">
    <div class="modal-header">
        <h3 class="modal-title">Tool[[[呈递]]]</h3>
    </div>
    <div class="modal-body">

        <div>
            <div class="form-group">
                <label class="col-xs-3 control-label">[[[Finance Manager]]]</label>
                <div class="col-xs-3">
                    <div ng-show="dataLoaded">
                        <select chosen="" required class="form-control" name="FM" ng-model="Approvers.FM" ng-options="m.NameENUS for m in FMs">
                            <option value="">[[[-- 请选择 --]]]</option>
                        </select>
                    </div>
                    <img src="~/Content/Images/loading.gif" ng-show="!dataLoaded" />
                    @*<div>{{Approvers.FM.Code}}</div>*@
                    <div ng-show="$submited||frmApprovalDialog.FM.$dirty">
                        <span class="ng-error" ng-show="frmApprovalDialog.FM.$error.required">[[[必须选择]]]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary" form-submit ng-click="ok(frmApprovalDialog)">[[[确定]]]</button>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <button class="btn btn-sm btn-warning" ng-click="cancel()">[[[取消]]]</button>
    </div>
</form>

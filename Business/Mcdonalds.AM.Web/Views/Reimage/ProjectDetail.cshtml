@{
    Layout = null;
}
<form name="frmProject">
    <div class="panel panel-black mg_t_10">
        <div class="panel-heading">
            <span class="panel-icon"></span>
            <span class="panel-title">
                [[[翻新信息]]]
            </span>
            <div class="panel-tools" ng-show="canInnerEdit">
                <button class="btn btn-sm" ng-show="!innerEditing" ng-click="edit()">
                    <span class="fa fa-edit"></span> [[[编辑]]]
                </button>
                <button class="btn btn-sm" ng-show="innerEditing" ng-click="save()">
                    <span class="fa fa-save"></span>[[[保存]]]
                </button>
            </div>
        </div>
        <div class="panel-body form-horizontal" role="form">
            <div class="form-group">
                <label class="col-xs-2 control-label">
                    [[[项目类型]]]
                </label>
                <div class="col-xs-2 pd_t_7">
                    [[[Reimage]]]
                </div>
                <label class="col-xs-2 control-label">
                    [[[美国编号]]]
                </label>
                <div class="col-xs-2 pd_t_7">
                    {{detail.USCode}}
                </div>
                
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">[[[开工日期]]]</label>
                <div class="col-xs-2" ng-show="innerEditing">
                    <p class="input-group">
                        <input type="text" class="form-control" name="GBDate" ng-model="detail.GBDate" datepicker-popup="{{format}}" is-open="openedGBDate" min-date="minDate" max-date="now" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openDate($event,'openedGBDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </p>
                    <div ng-show="$submited||frmProject.GBDate.$dirty">
                        <span class="ng-error" ng-show="frmProject.GBDate.$error.required">[[[必须填写]]]</span>
                    </div>
                </div>
                <div ng-show="!innerEditing" class="col-xs-2 pd_t_7">
                    {{detail.GBDate|date:'yyyy-MM-dd'}}
                </div>
                <label class="control-label col-xs-2">[[[Re-open Date]]]</label>
                <div class="col-xs-2" ng-show="innerEditing">
                    <p class="input-group">
                        <input type="text" class="form-control" name="ReopenDate" ng-model="detail.ReopenDate" datepicker-popup="{{format}}" is-open="openedReopenDate" min-date="now" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openDate($event,'openedReopenDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </p>
                    <div ng-show="$submited||frmProject.ReopenDate.$dirty">
                        <span class="ng-error" ng-show="frmProject.ReopenDate.$error.required">[[[必须填写]]]</span>
                    </div>
                </div>
                <div ng-show="!innerEditing" class="col-xs-2 pd_t_7">
                    {{detail.ReopenDate|date:'yyyy-MM-dd'}}
                </div>
                <label class="control-label col-xs-2">Project Create Date</label>
                <div class="col-xs-2 pd_t_7">{{detail.CreateDate | date:"yyyy-MM-dd"}}</div>
            </div>
        </div>
    </div>
</form>

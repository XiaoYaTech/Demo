            <label class="control-label col-xs-2">[[[添加必要抄送人]]]</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <button type="button" class="input-group-addon" ng-click="selectNecessary()" ng-disabled="loading">[[[选择]]]</button>
                    <input class="form-control" required onfocus="this.blur()" value="{{necessaryNoticeUsersName}}" />
                </div>
            </div>
        </div>
        *@
            <div class="form-group">
                <label class="control-label col-xs-5">[[[如果需要发送通知给其他人员，请从下面列表中选择]]]</label>
                <div class="col-xs-7">
                    <div class="input-group">
                        <input class="form-control" readonly="readonly" value="{{noticeUsersName}}" />
                        <button type="button" class="input-group-addon" ng-click="selectEmployee()">[[[选择]]]</button>
                    </div>
                </div>
            </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-sm btn-primary" ng-click="ok()"
        ng-disabled="frmEditUser.$invalid">
        [[[提交]]]
    </button>
    &nbsp;&nbsp;&nbsp;&nbsp;
        <button class="btn btn-sm btn-warning" ng-click="cancel()">[[[取消]]]</button>
</div>


@{
    Layout = null;
}
<div class="panel panel-black mg_t_10">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">
            请选择创建流程的餐厅
        </span>
    </div>
    <div class="panel-body form-horizontal">
        <div class="form-group">
            <label class="control-label col-xs-2">中文名称</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" ng-show="isHoverStoreName" ng-blur="hoverStoreName(false)" ng-model="searchedStore" typeahead-loading="loadingStores" typeahead="n as n.NameZHCN+'('+n.NameENUS+')' for n in searchStoreByName($viewValue)|orderBy:'NameZHCN'" />
                <input type="text" readonly="readonly" class="form-control" ng-show="!isHoverStoreName" ng-mouseover="hoverStoreName(true)" value="{{isValidStore()?(searchedStore.NameZHCN+'('+searchedStore.NameENUS+')'):''}}" />
            </div>
            <label class="control-label col-xs-2">美国编号</label>
            <div class="col-xs-2">
                <input type="text" class="form-control" ng-show="isHoverUsCode" ng-blur="hoverCode(false)" ng-model="searchedStore" typeahead-loading="loadingStores" typeahead="n as n.StoreCode for n in searchStore($viewValue)" />
                <input type="text" readonly="readonly" class="form-control" ng-show="!isHoverUsCode" ng-mouseover="hoverCode(true)" value="{{isValidStore()?searchedStore.StoreCode:''}}" />
                <i ng-show="loadingStores" class="glyphicon glyphicon-refresh"></i>
            </div>
            @*<div class="col-xs-1">
                <input type="button" ng-click="selectStore()" id="btnSearch" class="btn btn-sm btn-primary" value="查询" />
            </div>*@
        </div>
    </div>
</div>

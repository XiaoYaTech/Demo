
@{
    Layout = null;
}
<div class="panel panel-black mg_t_10">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">
            [[[Write Off Data]]]
        </span>      
    </div>
    <div class="panel-body clearfix">
        <div class="col-xs-8">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2">&nbsp;</th>
                    <th width="25%">[[[Total Investments]]]</th>
                    <th width="25%"> [[[NBV(Closure Data)]]]</th>
                    <th width="25%">[[[Write off]]]</th>
                </tr>
                <tr>
                    <td colspan="2">[[[RE]]]</td>
                    <td>{{datas.RE_Original | money}}</td>
                    <td>{{datas.RE_NBV | money}}</td>
                    <td>{{datas.RECost_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td colspan="2">[[[LHI]]]</td>
                    <td>{{datas.LHI_Original | money}}</td>
                    <td>{{datas.LHI_NBV | money}}</td>
                    <td>{{datas.LHI_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td class="table-tree-branch" colspan="2">[[[ESSD]]]</td>
                    <td>{{datas.ESSD_Original | money}}</td>
                    <td> {{datas.ESSD_NBV | money}}</td>
                    <td>{{datas.ESSD_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td class="table-tree-leaf" width="5%">&nbsp;</td>
                    <td class="table-tree-leaf-node" width="20%">[[[Equipment]]]</td>
                    <td>{{datas.Equipment_Original | money}}</td>
                    <td>{{datas.Equipment_NBV | money}}</td>
                    <td>{{datas.Equipment_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td class="table-tree-leaf">&nbsp;</td>
                    <td class="table-tree-leaf-node">[[[Signage]]]</td>
                    <td>{{datas.Signage_Original | money}}</td>
                    <td>{{datas.Signage_NBV | money}}</td>
                    <td>{{datas.Signage_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td class="table-tree-leaf">&nbsp;</td>
                    <td class="table-tree-leaf-node">[[[Seating]]]</td>
                    <td>{{datas.Seating_Original | money}}</td>
                    <td>{{datas.Seating_NBV | money}}</td>
                    <td>{{datas.Seating_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td class="table-tree-leaf-last">&nbsp;</td>
                    <td class="table-tree-leaf-node-last">[[[Decoration]]]</td>
                    <td>{{datas.Decoration_Original | money}}</td>
                    <td>{{datas.Decoration_NBV | money}}</td>
                    <td> {{datas.Decoration_WriteOFF | money}}</td>
                </tr>
                <tr>
                    <td colspan="2">[[[Closing Cost]]]</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>{{datas.ClosingCost | money}}</td>
                </tr>
                <tr>
                    <td colspan="2">[[[Total]]]</td>
                    <td>{{datas.TotalCost_Original | money}}</td>
                    <td>{{datas.TotalCost_NBV | money}}</td>
                    <td>{{datas.TotalCost_WriteOFF | money}}</td>
                </tr>
            </table>
        </div>    
        <div class="form-horizontal col-xs-4" role="form">
            <label class="control-label col-xs-6">[[[Equipment Transfer]]]</label>
            <div class="col-xs-6 pd_t_7">
                {{datas.EquipmentTransfer | money}}
            </div>
        </div>
    </div>
</div>

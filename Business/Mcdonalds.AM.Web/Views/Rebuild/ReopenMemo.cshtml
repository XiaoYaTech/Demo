
@{
    Layout = null;
}
<form name="frmMain">
    <task-reminder></task-reminder>
    <top-nav project-id="{{projectId}}" flow-code="Rebuild" sub-code="Rebuild_ReopenMemo" place-holder="10"></top-nav>
    <cheking-point project-id="projectId" flow-code="Rebuild_ReopenMemo" refresh="checkPointRefresh"></cheking-point>

    <reopen-memo project-id="{{projectId}}" editable="isPageEditable" source="entity"></reopen-memo>

    <notification-message project-id="projectId"
                          flow-code="Rebuild"
                          sub-flow-code="Rebuild_ReopenMemo"
                          node-id="entity.Id"
                          uscode="entity.RbdInfo.USCode"></notification-message>

    <div class="form-actions ta_c" ng-show="isPageEditable">
        <button type="button" class="btn btn-lg btn-orange" ng-click="save()" ng-disabled="acting"><span class="fa fa-paste"></span>[[[保存]]]</button>
        <button type="button" class="btn btn-lg btn-red" ng-show="unNotify" ng-click="notify(frmMain)" form-submit ng-disabled="acting"><span class="fa fa-check"></span>[[[通知]]]</button>
    </div>

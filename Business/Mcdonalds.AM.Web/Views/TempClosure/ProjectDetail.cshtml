@{
    Layout = null;
}
<div class="panel panel-black mg_t_10">
    <div class="panel-heading">
        <span class="panel-icon"></span>
        <span class="panel-title">临时关店信息
        </span>
        <div class="panel-tools" ng-show="canInnerEdit">
            <button class="btn btn-sm" ng-show="!innerEditing" ng-click="edit()">
                <span class="fa fa-edit"></span>编辑
            </button>
            <button class="btn btn-sm" ng-show="innerEditing" ng-click="save()">
                <span class="fa fa-save"></span>保存
            </button>
        </div>
    </div>
    <div class="panel-body form-horizontal" role="form">
        <div class="form-group">
            <label class="control-label col-xs-2">项目类型</label>
            <div class="col-xs-2 pd_t_7">TempClosure</div>
            <label class="control-label col-xs-2">餐厅编号</label>
            <div class="col-xs-2 pd_t_7">{{detail.USCode}}</div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-2">临时关店日期</label>
            <div class="col-xs-2 pd_t_7" ng-show="innerEditing">
                <p class="input-group">
                    <input type="text" class="form-control" ng-model="detail.ActualTempClosureDate" datepicker-popup="{{format}}" is-open="$parent.showCloseDate" min-date="minDate" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="openDate($event,'showCloseDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
            <div class="col-xs-2 pd_t_7" ng-show="!innerEditing">
                {{detail.ActualTempClosureDate|date:'yyyy-MM-dd'}}
            </div>
            <label class="control-label col-xs-2">重开日期</label>
            <div class="col-xs-2 pd_t_7" ng-show="innerEditing">
                <p class="input-group">
                    <input type="text" class="form-control" ng-model="detail.ActualReopenDate" datepicker-popup="{{format}}" is-open="$parent.showReOpenDate" min-date="minDate" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="openDate($event,'showReOpenDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
            <div class="col-xs-2 pd_t_7" ng-show="!innerEditing">
                {{detail.ActualReopenDate|date:'yyyy-MM-dd'}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-2 control-label">
                关店原因
            </label>
            <div class="col-xs-6 pd_t_7">
                <dict-selector parent-code="ClosureReasons" editable="innerEditing" selected-code="detail.ClosureReasonCode" selected-dict="closureReason"></dict-selector>
                <div ng-show="innerEditing && detail.ClosureReasonCode=='Others'" class="pd_t_7">
                    <textarea id="closureReasonRemark" rows="4" ng-model="detail.ClosureReasonRemark" class="form-control input-required" />
                </div>
                <div ng-show="!innerEditing && detail.ClosureReasonCode=='Others'" class="pd_t_7">
                    {{detail.ClosureReasonRemark}}
                </div>
            </div>
        </div>
    </div>
</div>

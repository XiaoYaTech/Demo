@{
    Layout = null;
}
<form class="form-horizontal" name="frmMain">
    <task-reminder></task-reminder>
    <top-nav project-id="{{projectId}}" flow-code="TempClosure" sub-code="TempClosure_ReopenMemo" place-holder="4"></top-nav>
    <cheking-point project-id="projectId" flow-code="TempClosure_ReopenMemo" refresh="checkPointRefresh"></cheking-point>
    <div class="panel panel-black mg_t_10">
        <div class="panel-heading">
            <span class="panel-icon"></span>
            <span class="panel-title">Re-open Memo
            </span>
        </div>
        <table class="table table-bordered">
            <colgroup>
                <col width="30%" />
                <col width="70%" />
            </colgroup>
            <tr>
                <td>
                    <label>Region/区域</label>
                </td>
                <td>{{entity.RegionENUS}}/{{entity.RegionZHCN}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Market/市场</label>
                </td>
                <td>{{entity.MarketENUS}}/{{entity.MarketZHCN}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Province/省份</label>
                </td>
                <td>{{entity.ProvinceENUS}}/{{entity.ProvinceZHCN}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>City/城市</label>
                </td>
                <td>{{entity.CityENUS}}/{{entity.CityZHCN}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Pipeline ID</label>
                </td>
                <td>{{entity.PipelineId}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>US Code/美国编号</label>
                </td>
                <td>{{entity.USCode}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Store Name/店铺名称</label>
                </td>
                <td>{{entity.StoreENUS}}/{{entity.StoreZHCN}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Temp Close Date/临时关店日期</label>
                </td>
                <td>
                    {{entity.TempCloseDate | date:'yyyy-MM-dd'}}
                    @*<div class="col-xs-4">
                        
                        <p class="input-group">
                            <input id="actualConsFinishDate" name="actualConsFinishDate" type="text" class="form-control" ng-model="entity.ActualConsFinishDate" datepicker-popup="yyyy-MM-dd" is-open="showActualConsFinishDate" date-disabled="disabled(date, mode)"  close-text="Close" onfocus="this.blur()" />
                            <span class="input-group-btn">
                                <button type="button" ng-disabled="!isActor" class="btn btn-default" ng-click="openDate($event,'showActualConsFinishDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                        <err-msgs field="frmMain.actualConsFinishDate" submited="$submited"></err-msgs>
                    </div>*@
                </td>
            </tr>
            <tr>
                <td>
                    <label>Opening Date/开店日期</label>
                </td>
                <td class="clearfix">
                    <div class="col-xs-4">
                        <p class="input-group">
                            <input id="openingDate" name="openingDate" type="text" class="form-control" ng-model="entity.OpeningDate" datepicker-popup="yyyy-MM-dd" is-open="showOpeningDate" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" onfocus="this.blur()" />
                            <span class="input-group-btn">
                                <button type="button" ng-disabled="!isActor" class="btn btn-default" ng-click="openDate($event,'showOpeningDate')"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                        <err-msgs field="frmMain.openingDate" submited="$submited"></err-msgs>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Store PortfolioType/餐厅PortfolioType</label>
                </td>
                <td>{{entity.ProtfolioTypeName}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>TA Classification* nature of TA/商圈类型</label>
                </td>
                <td>{{entity.TAClassificationName}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Market desirability/商圈理想性</label>
                </td>
                <td>{{entity.MarketDesirability}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>RE Rating/地产评分</label>
                </td>
                <td>{{entity.RERating}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Operation Size*business area/营业面积</label>
                </td>
                <td>{{entity.BusinessArea}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Kitchen Floor*which floor/厨房所在楼层</label>
                </td>
                <td>{{entity.KitchenFloor}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Seating Floor*Number/座位楼层*座位数量</label>
                </td>
                <td>{{entity.SeatingFloor}}*{{entity.SeatingNum}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Drive-T hru Car Parking Number/得来速停车位数量</label>
                </td>
                <td>{{entity.ParkingNum}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Contract Type/合同类型</label>
                </td>
                <td>{{entity.ContractType}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Kiosk*if yes/甜品店，如有</label>
                </td>
                <td>{{entity.Kiosk}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>RE Rep/地产代表</label>
                </td>
                <td>{{entity.RERepName}}
                </td>
            </tr>
            <tr>
                <td>
                    <label>Planner(Current)/规划专员</label>
                </td>
                <td>{{entity.PlannerName}}
                </td>
            </tr>
        </table>
    </div>
    <notification-message project-id="projectId"
        flow-code="TempClosure"
        sub-flow-code="{{subFlowCode}}"
        node-id="entity.Id"
        uscode="entity.USCode"></notification-message>
    <div class="form-actions ta_c" ng-hide="isUserAction">
        <button type="button" class="btn btn-lg btn-warning" ng-disabled="acting" ng-show="isActor" ng-click="save()"><span class="fa fa-check"></span>[[[保存]]]</button>
        <button type="button" class="btn btn-lg btn-red" form-submit ng-show="unNotify&&isActor" ng-click="notify(frmMain)"><span class="fa fa-check"></span>[[[通知]]]</button>
    </div>
</form>

@{
    Layout = null;
}
<div class="modal-header">
    <h3 class="modal-title">[[[选择审批人]]]</h3>
</div>
<div class="modal-body">

    <form class="form-horizontal" name="frmEditUser" novalidate>

        <div class="form-group">
            <label class="control-label col-xs-2">[[[Finance Manager]]]</label>
            <div class="col-xs-4 pd_t_7">
                <div ng-show="dataLoaded">
                    <select chosen="{disable_search:true}" id="selPMSupervisor" class="form-control" ng-model="entity.selFinSupervisor" required ng-options="m.NameENUS for m in FinSupervisorList">
                        <option value="">[[[-- 请选择 --]]]</option>
                    </select>
                </div>
                <img src="~/Content/Images/loading.gif" ng-show="!dataLoaded" />
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">


    <button class="btn btn-sm btn-primary" ng-click="ok(scope)"
        ng-disabled="frmEditUser.$invalid || submiting">
        [[[提交]]]</button>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <button class="btn btn-sm btn-warning" ng-click="cancel()">[[[取消]]]</button>
</div>



@{
    Layout = null;
}
<div class="modal-header">
    <h3 class="modal-title">[[[Comments]]]</h3>
</div>
<div class="modal-body">

    <form class="form-horizontal" name="frmRecall" novalidate>
        <div class="panel {{!!panelStyle?panelStyle:'panel-orange mg_t_10'}}">
        <div class="panel-body">
            <textarea  class="form-control" required rows="4" ng-model="entity.Comment"></textarea>
     
        </div>
            </div>
    </form>
</div>
<div class="modal-footer">


    <button class="btn btn-sm btn-primary" ng-click="ok(scope)"
        ng-disabled="frmRecall.$invalid">
        [[[呈递]]]</button>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <button class="btn btn-sm btn-warning" ng-click="cancel()">[[[取消]]]</button>
</div>



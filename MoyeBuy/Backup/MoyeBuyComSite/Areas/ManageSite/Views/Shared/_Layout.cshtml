<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css?version=")@DateTime.Now.Ticks" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/ManageSite/Content/ManageSite.css?version=")@DateTime.Now.Ticks" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/cupertino/jquery-ui-1.9.0.custom.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.9.0.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Editor/kindeditor-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/ManageSite/Scripts/ManageSite.js?version=")@DateTime.Now.Ticks" type="text/javascript"></script>
    @MvcHtmlString.Create(ViewBag.ScriptPath)
</head>
<body>
<form id="mainform" name="mainform" method="post">
<div class="AdminHeader">
    <div class="HeaderContainer">
        <div class="SiteTitle">
            <span>@System.Configuration.ConfigurationManager.AppSettings["SiteName"]后台管理</span>
        </div>
    </div>
</div>
<div class="AdminMainBody">
    <div class="LeftMenu">
        <div class="Menu"><span>菜单</span><b onclick="javascript:toggleMenu();"></b></div>
        <div class="AdminCategorys">
            @RenderPage("~/Areas/ManageSite/Views/Shared/LeftMenu.cshtml", ViewBag.LeftMenu)
        </div>
    </div>
    <div class="Container">
        <div class="BodyMenu"></div>
        <div class="BodyContainer">
            <div class="PageTitle"><span style="display:block;margin-left:10px;">@ViewBag.PageTitle</span></div>
            @RenderBody()
        </div>
    </div>
</div>
</form>
</body>
</html>

